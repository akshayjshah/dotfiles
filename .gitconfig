[user]
	name = Akshay Shah
	email = shah@uber.com
[core]
	pager = "diff-so-fancy | less --tabs=4 -RFX"
	excludesfile = ~/.gitignore_global
	autocrlf = input
[branch]
    autosetupmerge = always
	autosetuprebase = always
[fetch]
	prune = true
[push]
	default = simple
[rerere]
	enabled = true
[color]
	ui = auto
[diff]
	algorithm = patience
[format]
	pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
	abbrev-commit = true
	date = relative
[alias]
	a = add
	amend = commit -a --amend
	c = commit
	co = checkout
	frb = !git fetch origin && git rebase origin/master
	graph = log --graph
	l = log origin/master..
	s = status
	save = !git add -A && git commit -m 'Savepoint'
	stashall = stash --include-untracked
	undo = reset --mixed HEAD^
	wip = !git add -u && git commit -m 'WIP'
	wipe = !git add -A && git commit -qm 'Wipe savepoint' && git reset --hard HEAD^
	wtf = log --follow --stat -p

	deforest = !sh -c 'git checkout master && git branch --merged | grep -v master | xargs -I "{}" git branch -D "{}" && git branch -v'
